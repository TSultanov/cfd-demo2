FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-12;
        relTol          0;
        smoother        GaussSeidel;
    }

    U
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-12;
        relTol          0;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent      yes;

    // Closed domains need a pressure reference to fix the gauge.
    pRefCell        0;
    pRefValue       0;

    residualControl
    {
        p               1e-12;
        U               1e-12;
    }
}

relaxationFactors
{
    equations
    {
        U               0.7;
        p               0.3;
    }
}

