FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}

dimensions      [0 1 -1 0 0 0 0];

// Use a moderate Mach number so rhoCentralFoam remains well-conditioned.
internalField   uniform (300 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform (300 0 0);
    }
    outlet
    {
        type            zeroGradient;
    }
    walls
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    frontAndBack
    {
        type            empty;
    }
}
